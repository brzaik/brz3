<div id="block_<%= block.id %>" class="block <%= block.additional_styles %>" <%= block.additional_tags %>>
  <div class="admin-padding">
    <% if current_user %>
      <div class="admin-links">
        <div class="btn-group">
          <%= link_to "#", :class => "btn btn-mini dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= block.content_name %> Block
            <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit", edit_column_block_path(block.column, block) %></li>
           <li><%= link_to "Delete", [block.column, block], :confirm => "Are you sure you wish to delete this block and its associated content?", :method => :delete %></li>
          </ul>
        </div>
        <br />
      </div>
    <% end %>

    <% if block.content_name == "Richtext" %>
      <%= render :partial => "richtexts/richtext_block", :locals => { :richtext => block.richtext } %>
    <% elsif block.content_name == "Video" %>
      <%= render :partial => "videos/video_block", :locals => { :video => block.video } %>
    <% elsif block.content_name == "Image" %>
      <%= render :partial => "images/image_block", :locals => { :image => block.image } %>
    <% elsif block.content_name == "TwitterBoard" %>
      <%= render :partial => "twitter_boards/twitter_board_block", :locals => { :twitter_board => block.twitter_board } %>
    <% end %>

  </div>
</div>