<div class="row-fluid">
  <div class="span8">
    <h1 style="margin: 20px 0px 40px 30px; font-size: 46px; line-height: 52px;">Hi there, I'm Brian. I design and build products aimed at making life more enjoyable.</h1>
  </div>
  <div class="span4">
    &nbsp;
  </div>
</div>

<br />

<h1 class="stubby-header default-padding">Selected Works:</h1>

<div class="panel">
  <% @highlighted_pages.each do |page| %>
    
    <div class="panel-inset-list">
      
      <div class="row-fluid">
        <div class="span6">
          
          <div style="padding: 20px 5px 0px 30px;">
            <h2>
              <%= link_to page.title, page %>
              <% if current_user and current_user.is_admin? %>
                <small class="admin-color">
                  <%= link_to edit_page_path(page) do %>
                    <i class="icon-cog"></i>
                  <% end %>
                </small>
              <% end %>
            </h2>
            <p><%= page.description %></p>
            <p>
              <%= link_to page do %>view project<% end %>
              
              <%= link_to "#", :style => "margin-left: 35px;" do %>
                <%= page.tags.count %> tag<%= page.tags.count == 1 ? '' : 's' %>
              <% end %>
            </p>
          </div>

        </div>
        <div class="span6">
          <%= link_to page do %>
            <%= placeholdit_image_tag "480x260", text: "Project Image", background_color: '#fdba13', text_color: '#000' %>
          <% end %>
        </div>
      </div>
      
    </div>

  <% end %>
</div>

<br /><br /><br />

<h1 class="stubby-header default-padding">More from <%= link_to "the Portfolio", portfolio_path %>:</h1>
<div class="row-fluid">
  
  <% @other_pages.each do |page| %>
    <div class="span3">

      <div class="panel black" style="border-top: 0px;">
        <%= link_to page do %>
          <%= placeholdit_image_tag "228x150", text: "Project Image", background_color: '#22a8b4', text_color: '#FFF' %>
        <% end %>
        <h3 class="panel-block-title">
          <%= link_to page do %>
            <%= page.title %>
            <% if current_user and current_user.is_admin? %>
              <small class="admin-color">
                <%= link_to edit_page_path(page) do %>
                  <i class="icon-cog"></i>
                <% end %>
              </small>
            <% end %>
          <% end %>
        </h3>
      </div>

    </div>
  <% end %>
</div>

<br />

<h1 class="stubby-header default-padding">
  Common Tags:
  <span style="padding-left: 16px;">
    <% @popular_tags.each do |tag| %>
      <%= link_to tag.name, portfolio_show_tag_path(tag), :class => "label" %>
    <% end %>
  </span>
</h1>

<br /><br /><br />