<%= form_for([section, row]) do |f| %>
  <% if row.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(row.errors.count, "error") %> prohibited this row from being saved:</h2>

      <ul>
      <% row.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="span4 field">
      <%= f.label :position %>
      <%= f.number_field :position, :class => "input-small" %>
    </div>
    <div class="span4 field">
      <%= f.label :section_id, "Move to Section" %>
      <%= f.number_field :section_id, :class => "input-small" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :additional_styles, "Additional Classes" %>
    <%= f.text_field :additional_styles, :class => "fillWidth" %>
  </div>

  <div class="field">
    <%= f.label :additional_tags %>
    <%= f.text_field :additional_tags, :class => "fillWidth" %>
  </div>

  <br />
  <div class="actions">
    <%= f.submit button_text, class: "btn btn-primary" %> <%= link_to "Cancel", "#", class: "cancelBtn" %>
  </div>
<% end %>
