<div id="page-row-<%= row.id %>" class="page-row <%= row.additional_styles %> <% if current_user %>add-floating-admin-links<% end %>" <%= row.additional_tags %>>
  <div class="admin-padding">
    <% if current_user %>
      <div class="admin-links admin-links-floating">
        <span class="caption">Row</span>
        <%= link_to edit_section_row_path(row.section, row) do %>
          <i class="icon-cog"></i>
        <% end %>
        <%= link_to [row.section, row], :confirm => "Are you sure you wish to remove this row?", :method => :delete do %>
          <i class="icon-remove-sign"></i>
        <% end %>
      </div>
    <% end %>

    <div class="row-fluid">
      <%= render row.columns %>
    </div>
    <% if current_user %>
      <br />
      <%= link_to "Add Column", new_row_column_path(row), remote: true, class: "add-link-block admin-links" %>
    <% end %>
  </div>
</div>