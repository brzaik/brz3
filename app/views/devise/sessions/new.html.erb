<div class="login-box">
  
  <div class="panel">
    <div class="default-padding">
      <h1 class="stubby-header">
        I've a feeling we're not in Kansas any more.
      </h1>
      <h2>That requires a valid login. Please sign in.</h2>

      <br /><br />

      <div class="form-horizontal">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          
          <div class="control-group">
            <%= f.label :email, class: "control-label" %>
            <div class="controls">
              <%= f.email_field :email, class: "input-pronounced" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password, class: "control-label" %>
            <div class="controls">
              <%= f.password_field :password, class: "input-pronounced" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="control-group">
              <label class="control-label">&nbsp;</label>
              <div class="controls">
                <%= f.check_box :remember_me, style: "margin: 0px;" %> <%= f.label :remember_me, style: "display: inline-block; font-weight: normal;" %>
              </div>
            </div>
          <% end -%>

          <div class="form-actions">
            <%= f.submit "Sign in", class: "btn btn-primary", style: "width: 160px;" %>
            <br />
            <br />
            <%= link_to "Sign up instead", new_registration_path(resource_name) %>
          </div>
        <% end %>
      </div>

    </div>
  </div>

</div>