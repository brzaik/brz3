<h1>Listing links</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Linkable</th>
    <th>Linkable type</th>
    <th>Caption</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.title %></td>
    <td><%= link.url %></td>
    <td><%= link.linkable_id %></td>
    <td><%= link.linkable_type %></td>
    <td><%= link.caption %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

