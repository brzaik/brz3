<h1>Listing users</h1>
<br />

<table class="table">
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th>Approved?</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.is_admin? ? 'Admin' : 'Basic User' %></td>
      <td><%= user.approved? ? 'Yes' : 'No' %></td>
      <td>&nbsp;</td>
    </tr>
  <% end %>
</table>
