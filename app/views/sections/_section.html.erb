<div id="page-section-<%= section.id %>" class="page-section <%= section.additional_styles %>" <%= section.additional_tags %>>
  <% if current_user %>
    <div class="admin-links">
      <div class="btn-group">
        <%= link_to "#", :class => "btn btn-mini dropdown-toggle", "data-toggle" => "dropdown" do %>
          Section
          <span class="caret"></span>
        <% end %>
        <ul class="dropdown-menu">
          <li><%= link_to "Edit", edit_page_section_path(section.page, section) %></li>
          <% if section.rows.count == 0 %>
            <li><%= link_to 'Remove Section', [section.page, section], :confirm => "Are you sure you wish to remove this section?", :method => :delete %></li>
          <% end %>
        </ul>
      </div>
      <br />
    </div>
  <% end %>

  <div>
    <%= render section.rows %>
    <%= link_to "Add Row", new_section_row_path(section), remote: true, class: "add-link-block admin-links" unless current_user.nil? %>
  </div>
</div>