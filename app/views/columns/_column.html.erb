<div id="column_<%= column.id %>" class="column span<%= column.span_width %> <%= column.additional_styles %>" <%= column.additional_tags %>>
  <div class="admin-padding">
    <% if current_user %>
      <div class="admin-links">
        <div class="btn-group">
          <%= link_to "#", :class => "btn btn-mini dropdown-toggle", "data-toggle" => "dropdown" do %>
            Column
            <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit", edit_row_column_path(column.row, column) %></li>
            <li><%= link_to "Add Block", new_column_block_path(column) %></li>
            <% if column.blocks.count == 0 %>
              <li><%= link_to "Delete", [column.row, column], :confirm => "Are you sure you wish to delete this column?", :method => :delete %></li>
            <% end %>
          </ul>
        </div>
        <br />
      </div>
    <% end %>

    <%= render column.blocks %>
  </div>
</div>