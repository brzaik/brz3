<% if user_signed_in? %>

  <div id="admin_bar" class="navbar" style="margin-bottom: 0px;">
    <div class="navbar-inner clearfix">
      <div class="container">
        
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <%= link_to "#", :class => "brand" do %>
          <i class="icon-glass" style="margin-top: 6px;"></i>
          Admin Mode
        <% end %>

        <div class="nav-collapse">
          <ul class="nav">
            <li class="dropdown">
              <%= link_to "#", :class => "dropdown-toggle", "data-toggle" => "dropdown" do %>
                Pages
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to "View All Pages", pages_path %></li>
                <li><%= link_to "Add Page", new_page_path %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav">
            <li class="dropdown">
              <%= link_to "#", :class => "dropdown-toggle", "data-toggle" => "dropdown" do %>
                Uploads
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to "View All Uploads", uploads_path %></li>
                <li><%= link_to "Add Upload", new_upload_path %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav">
            <li><%= link_to "Users", users_path %></li>
          </ul>
          <ul class="nav">
            <li><%= link_to "Contact Messages", contacts_path %></li>
          </ul>
          <ul class="nav pull-right">
            <li class="dropdown">
              <%= link_to "#", :class => "dropdown-toggle", "data-toggle" => "dropdown" do %>
                <%= current_user.email %>
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to "Sign out", destroy_user_session_path %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav pull-right">
            <li class="dropdown">
              <%= link_to "#", :class => "dropdown-toggle", "data-toggle" => "dropdown" do %>
                <%= current_user.view_as_admin? ? 'Admin View is ON' : 'Admin View is OFF' %>
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <% if current_user.view_as_admin? %>
                  <li><%= link_to "Turn Admin View OFF", toggle_view_user_path(current_user) %></li>
                <% else %>
                  <li><%= link_to "Turn Admin View ON", toggle_view_user_path(current_user) %></li>
                <% end %>
              </ul>
            </li>
          </ul>

        </div>

      </div>
      
    </div>
  </div>

<% end %>