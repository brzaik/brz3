<h1>View All Uploads</h1>
<br />
<table class="table">
  <tr>
    <th>Preview</th>
    <th>Filename</th>
    <th>Actions</th>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
    <td><%= image_tag upload.myfile.url(:thumb) %></td>
    <td><%= upload.myfile_file_name %></td>
    <td><%= link_to 'Show', upload %> <%= link_to 'Edit', edit_upload_path(upload) %> <%= link_to 'Destroy', upload, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Upload', new_upload_path %>
